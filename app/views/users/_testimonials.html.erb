<% if @testimonials.any? %>
  <h3 class="text-2xl font-semibold mb-6 text-gray-800">My comments</h3>
  <div class="overflow-x-auto rounded-lg shadow-md">
    <table id="testimonials" class="min-w-full divide-y divide-gray-200 bg-white text-sm">
      <thead class="bg-gray-100 text-left text-gray-600">
        <tr>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Quiz name</th>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Comment</th>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Date</th>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @testimonials.each do |testimonial| %>
          <tr class="hover:bg-gray-50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-800">
              <%= link_to testimonial.quiz.title, quiz_path(testimonial.quiz.id), class: "text-indigo-600 hover:text-indigo-800" %>
            </td>
            <td class="whitespace-nowrap px-6 py-4 text-gray-800"><%= testimonial.testimonial_text %></td>
            <td class="whitespace-nowrap px-6 py-4 text-gray-800"><%= format_date("date_time", testimonial.created_at) %></td>
            <td class="whitespace-nowrap px-6 py-4 text-gray-800">
              <%= button_to quiz_testimonial_path(testimonial.quiz.id, testimonial.id), method: :delete, class: "text-red-600 hover:text-red-800" do %>
                <%= image_tag 'delete.svg', alt: 'Delete', width: 20, height: 20 %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
