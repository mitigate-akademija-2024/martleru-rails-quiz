<h3 class="text-2xl font-semibold mb-6 text-gray-800">My results</h3>
<% if @results.any? %>
  <div class="overflow-x-auto rounded-lg shadow-md">
    <table id="results" class="min-w-full divide-y divide-gray-200 bg-white text-sm">
      <thead class="bg-gray-100 text-left text-gray-600">
        <tr>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Quiz name</th>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Score</th>
          <th class="whitespace-nowrap px-6 py-3 font-medium">Author</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @results.each do |result| %>
          <tr class="hover:bg-gray-50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-800">
              <%= link_to result.quiz.title, quiz_path(result.quiz.id), class: "text-indigo-600 hover:text-indigo-800" %>
            </td>
            <td class="whitespace-nowrap px-6 py-4 text-gray-800"><%= result.score %></td>
             <td class="whitespace-nowrap px-6 py-4 text-gray-800">
              <%= result.quiz.user.username %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-4">
    <%= render 'kaminari/paginator', paginator: @results, paginator_param_name: :results_page %>
  </div>
<% else %>
  <p class="text-gray-500 px-4 py-2">No results available.</p>
<% end %>
