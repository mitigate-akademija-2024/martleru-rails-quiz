<div id="<%= dom_id quiz %>" >
  <div class="flex flex-col justify-between mb-9 ">
    <p class="break-words font-bold text-3xl">
      <%= quiz.title %>
      <hr>
    </p>
    <p class="break-words roboto-thin">
      <strong>Description:</strong>
      <%= quiz.description %>
    </p>
  </div>

  <h3>Questions</h3>

<%= link_to "Add Question", new_quiz_question_path(@quiz) %>
<div class="overflow-x-auto rounded-lg border border-gray-200">
  <table id="questions" class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
    <thead class="text-left bg-gray-100">
      <tr>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Question</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Answers</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Edit</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Delete</th>

      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% quiz.questions.each do |question| %>
        <tr class="border-b border-gray-200">
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            <%= question.question_text %>
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700">
            <ul class="list-disc pl-5">
              <% question.answers.each do |answer| %>
                <li>
                <%= answer.answer_text %> 
                <%= answer.correct %> 
                
                </li>
              <% end %>
            </ul>
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700">
            <%= link_to "Edit", edit_question_path(question), class: 'inline-block rounded border border-indigo-600 px-3 py-1 text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500' %>
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700">
            <%= button_to "DzÄ“st", question, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


