<div class="space-y-6">
  <h3 class="text-2xl font-semibold mb-6 text-gray-900">
    Comments (<%= quiz.testimonials.count %>)
  </h3>
  <% quiz.testimonials.each do |testimonial| %>
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <p class="text-gray-800 text-lg mb-4 leading-relaxed">
        <%= testimonial.testimonial_text %>
      </p>
      <div class="flex items-center justify-between">
        <p class="text-gray-900 font-semibold text-sm">
          <%= testimonial.user.username %>
        </p>
        <p class="text-gray-500 text-sm">
          <%= format_date("date_time", testimonial.created_at) %>
        </p>
      </div>
    </div>
  <% end %>
</div>
