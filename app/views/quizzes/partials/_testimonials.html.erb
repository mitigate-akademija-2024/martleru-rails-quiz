<div class="space-y-6">
  <h3 class="text-2xl font-semibold mb-6">Testimonials</h3>
  <% quiz.testimonials.each do |testimonial| %>
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-lg">
      <p class="text-gray-800 text-lg mb-2"><%= testimonial.testimonial_text %></p>
      <div class="flex items-center space-x-3">
          <p class="text-gray-800 font-semibold"><%= testimonial.user.username %></p>
          <p class="text-gray-500 text-sm"><%= format_date("date_time", testimonial.created_at) %></p>
      </div>
    </div>
  <% end %>
</div>