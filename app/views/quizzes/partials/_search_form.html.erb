<%= form_with(url: search_quiz_quizzes_path, method: :get, local: true, class: "flex items-center") do |form| %>
  <div class="relative w-full">
    <%= form.text_field :title, placeholder: "Search quizzes...", 
                        class: "w-full px-4 py-2 pr-10 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>

    <%= button_tag type: 'submit', class: "absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none" do %>
      <%= raw search_svg(24, 24) %>
    <% end %>
  </div>
<% end %>
