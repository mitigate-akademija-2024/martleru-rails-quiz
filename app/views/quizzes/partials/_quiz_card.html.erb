<%= link_to quiz_path(quiz), class: "block" do %>
  <div id="<%= dom_id quiz %>" class="flex flex-col h-full gap-2 p-4 border rounded-lg shadow-lg bg-white hover:bg-gray-100 transition-all duration-300 ease-in-out">
    <div class="flex flex-col min-h-16">
      <h1 class="break-words font-bold text-3xl text-gray-800">
        <%= quiz.title %>
      </h1>
    </div>
    <hr class="border-t-2 border-gray-300 mt-2 mb-4">
    <div class="flex-grow flex flex-col justify-between">
      <div class="flex flex-col flex-grow">
        <p class="break-words text-sm text-gray-600 mb-4">
          <%= quiz.description %>
        </p>
      </div>
      <div class="text-sm text-gray-500">
        <p>
          <span class="font-semibold">Created at:</span> <%= format_date("date", quiz.created_at) %>
        </p>
        <p>
          <span class="font-semibold">Created by:</span> <%= quiz.user.email %>
        </p>
      </div>
    </div>
  </div>
<% end %>

