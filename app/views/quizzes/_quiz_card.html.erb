<%= link_to quiz_path(quiz), class: "block" do %>
  <div id="<%= dom_id quiz %>" class="min-h-[250px] flex flex-col gap-2 p-4 border rounded-lg shadow-lg bg-white hover:bg-gray-100 transition-all duration-300 ease-in-out">
    <div class="flex flex-col grow-0">
      <h1 class="break-words font-bold text-3xl text-gray-800">
        <%= quiz.title %>
      </h1>
      <hr class="border-t-2 border-gray-300 mt-2 mb-4">
    </div>
    <div class="flex-grow flex flex-col justify-between">
      <p class="break-words text-sm text-gray-600">
        <span class="font-semibold">Description:</span> <%= quiz.description %>
      </p>
      <p class="mt-4 text-sm text-gray-500">
        <span class="font-semibold">Created at:</span> <%= format_date(quiz.created_at) %>
      </p>
    </div>
  </div>
<% end %>
