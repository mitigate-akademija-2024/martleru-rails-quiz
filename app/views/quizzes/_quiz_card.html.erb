<%= link_to quiz_path(quiz), class: "block" do %>
  <div id="<%= dom_id quiz %>" class="mb-9 min-h-[150px] space-y-2">
    <div>
      <h1 class="break-words font-bold text-3xl">
        <%= quiz.title %>
      </h1>
      <hr>
    </div>

    <p class="break-words roboto-thin">
      <strong>Description:</strong>
      <%= quiz.description %>
    </p>

    <p>
      Created at: <%= format_date(quiz.created_at) %>
    </p>
  </div>
<% end %>
