<section class="px-4 py-8">
  <div class="container mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl lg:text-6xl font-extrabold text-gray-800 mb-2">
        <%= @title %>
      </h1>
      <p class="text-sm md:text-base lg:text-lg text-gray-600">
        <%= @description %>
      </p>
    </div>

    <%= render 'quizzes/partials/search_form' %>

    <div class="mt-8">
      <% if @quizzes.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          <% @quizzes.each do |quiz| %>
            <%= render "quizzes/partials/quiz_card", quiz: quiz %>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No quizzes found.</p>
      <% end %>
    </div>
  </div>
</section>
