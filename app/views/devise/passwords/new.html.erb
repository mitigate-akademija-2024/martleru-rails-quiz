<section class="px-4 py-4">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full max-w-sm mx-auto bg-white p-8 shadow-lg rounded-lg" }) do |f| %>
    <h2 class="text-2xl font-bold text-center mb-6">Forgot your password?</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <hr class="my-6 border-gray-300">

    <div class="text-center space-y-4">
      <div class="text-sm">
        <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
      </div>

      <div class="text-sm">
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700" %>
      </div>
    </div>
  <% end %>
</section>
