<section class="px-4 py-8"> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-sm mx-auto bg-white p-8 shadow-lg rounded-lg" }) do |f| %>
    <h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <hr class="my-6 border-gray-300">

    <div class="text-center space-y-4">
      <div class="text-sm">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-700" %>
      </div>

      <div class="text-sm">
        <span class="text-gray-700">Don't have an account?</span>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
      </div>
    </div>
  <% end %>
</section>
