<div class="nested-form-wrapper flex items-center justify-between mt-2 rounded-lg shadow-sm bg-white" data-new-record="<%= form.object.new_record? %>">
  <div class="flex-grow">
    <%= form.text_field :answer_text, placeholder: "Enter answer text", 
                        class: "w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2" %>
  </div>

  <div class="flex items-center space-x-4">
    <%= form.check_box :correct, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :correct, 'Mark Correct', class: "text-sm font-medium text-gray-700" %>
  </div>

  <button type="button" data-action="nested-form#remove" 
          class='inline-flex items-center rounded border border-red-600 px-3 py-1 text-sm font-medium text-red-600 hover:bg-red-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-red-300 ml-2'>
    <%= image_tag 'delete.svg', alt: 'Delete', width: 20, height: 20 %>
  </button>
  
  <%= form.hidden_field :_destroy %>
</div>
