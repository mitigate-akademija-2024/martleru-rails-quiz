<!--question.persisted ? question : [question.quiz, question] pačeko vai DB ir izveiods jautājums - ja ir tad sūta tikai Question ja nē tad arī question.quiz 
/quizzes/:id/questions
 -->

<%= form_with(model: question.persisted? ? question : [question.quiz, question]) do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :question_text %>
    <%= form.text_field :question_text %>

    <%= form.fields_for :answers do |ff| %>
      <li>
        <%= ff.text_field :answer_text %>
    
        <%= ff.label :correct, 'Mark Correct' %>
        <%= ff.check_box :correct %>
      </li>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.submit %>
    <%= form.submit :add_answer %>
  </div>
<% end %>