
<%= form_tag([@quiz, :quizlink], method: :post, class: "bg-white p-6 rounded-lg shadow-md") do %>
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Share Quiz: <%= @quiz.title %></h1>

  <div class="mb-4">
    <%= label_tag :emails, "Email Addresses", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= text_area_tag :emails, nil, rows: 3, placeholder: "example1@email.com, example2@email.com", class: "w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2" %>
  </div>
  
  <%= submit_tag "Send Quiz Link", class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
<% end %>
